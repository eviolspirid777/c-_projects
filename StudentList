    }

    static void PrintMenu(FileInfo fileInf, string path)
    {
        Men:
        Console.Write("Enter the number:\n1.Get the list\n2.Add node\n3.Find node\n4.Exit\n");
        char ch = Convert.ToChar(Console.Read());
        switch (ch)
        {
            case '1':
                {
                    Console.Clear();
                    ListMenu(fileInf);
                    break;
                }
            case '2':
                {
                    Console.Clear();
                    AddNode(fileInf, path);
                    break;
                }
            case '3':
                {
                    Console.Clear();
                    FindNode();
                    break;
                }
            case '4':
                {
                    Console.Clear();
                    break;
                }
            default:
                {
                    Console.Clear();
                    Console.WriteLine("Error! Cannot get the the symbol");
                    Thread.Sleep(500);
                    Console.Clear();
                    goto Men;
                    break;
                }
        }
    }
