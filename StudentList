using System;
using System.IO;

internal class Program
{
    class Person
    {
        public string? name, faculty, specialty, course, group, city, pst_index, street, phone, mail; 
    };
    
    static async void ListMenu(FileInfo fileInf)
    {
    
        if (fileInf.Exists)
