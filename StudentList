    static void AddNode(FileInfo fileInf, string path)
    {
        Person human = new Person();
        if (fileInf.Exists)
        {
            Console.Clear();
            Console.WriteLine("Enter the INITIALS:");
            human.name = Convert.ToString(Console.Read());
            Console.WriteLine("Enter the Faculty:");
            human.faculty = Convert.ToString(Console.Read());
            Console.WriteLine("Enter the Specialty:");
            human.specialty = Convert.ToString(Console.Read());
            Console.WriteLine("Enter the Course:");
            human.course = Convert.ToString(Console.Read());
            Console.WriteLine("Enter the Group:");
            human.group = Console.ReadLine();
            Console.WriteLine("Enter the City:");
            human.city = Console.ReadLine();
            Console.Write("Enter the Post Index:");
            human.pst_index = Console.ReadLine();
            Console.Write("Enter the Street:");
            human.street = Console.ReadLine();
            Console.Write("Enter the Phone:");
            human.phone = Console.ReadLine();
            Console.Write("Enter the E-mail:");
            human.mail = Console.ReadLine();
            string originalText = $"FIO = {human.name}, Faculty = {human.faculty}, Specialty = {human.specialty}, Course = {human.course}, Group = {human.group}, City = {human.city}, PostIndex = {human.pst_index}, Street = {human.street}, Phone = {human.phone}, Mail = {human.mail}";

            File.WriteAllText(path, originalText);
        }
        else
            Console.WriteLine("Cannot find the file!");
       
    }

    static void FindNode()
